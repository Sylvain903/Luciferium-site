  </div>

  <!-- Codes cadeaux -->
  <div class="codes">
    <h3>Code Cadeau</h3>
    <input type="text" id="giftCode" placeholder="Entrez votre code">
    <button onclick="checkCode()">Valider</button>
    <p id="giftMessage"></p>
  </div>

  <!-- Chat -->
  <div class="chat">
    <div class="chat-messages" id="chatMessages"></div>
    <input type="text" id="chatInput" placeholder="Votre message">
    <button onclick="sendMessage()">Envoyer</button>
  </div>

  <!-- Scripts -->
  <script>
    // --- Codes cadeaux ---
    function checkCode() {
      const input = document.getElementById("giftCode").value.trim();
      const msg = document.getElementById("giftMessage");
      if (input === "LUCIFER") {
        msg.innerText = "✔ Code valide !";
      } else {
        msg.innerText = "❌ Code incorrect.";
      }
    }

    // --- Chat éphémère ---
    const messages = [];
    function sendMessage() {
      const input = document.getElementById("chatInput");
      const msgBox = document.getElementById("chatMessages");
      let text = input.value.trim();

      if (text !== "") {
        // Petit filtre d'insultes simple
        const badWords = ["con", "merde", "pute", "enculé"];
        badWords.forEach(word => {
          const regex = new RegExp(word, "gi");
          text = text.replace(regex, "***");
        });

        messages.push(text);
        if (messages.length > 5) messages.shift(); // max 5 messages

        msgBox.innerHTML = messages.map(m => `<div>${m}</div>`).join("");
        input.value = "";
      }
    }
  </script>
